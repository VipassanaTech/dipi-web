    }
    else
    {
        $res = db_query($q);
        $r = $res->fetchAssoc();
        $center_name = explode('/', $r['c_name'])[0];
        if ($r['a_status'] == 'PreConfirmation')
        {
          if ( !($r['cs_whatsapp_preconf']) )
