function _check_cred($data)
{
    require_once DRUPAL_ROOT . '/' . variable_get('password_inc', 'includes/password.inc');
    $cred_cry_base64 = $data['data'];
    $ret = array(
        'Success'=>'',
        'Message'=>'',
    );


    if (!$cred_cry_base64)
    {
        $ret['Success'] = false;
        $ret['Message'] = "Credentials string required.";
        return $ret;  
    }


    try
    {
        $sodium_key_pair_base64 = variable_get('sodium_key_pair_base64', NULL);

        if (!$sodium_key_pair_base64)
        {
          $ret['Success'] = false;
          $ret['Message'] = "There is some error.";
          return $ret;  
        }

        $sodium_key_pair_bin = sodium_base642bin($sodium_key_pair_base64, SODIUM_BASE64_VARIANT_ORIGINAL);
        $cred_cry_bin = sodium_base642bin($cred_cry_base64, SODIUM_BASE64_VARIANT_ORIGINAL);
        $cred = sodium_crypto_box_seal_open($cred_cry_bin, $sodium_key_pair_bin);
        if(!$cred || !strstr($cred, '|||'))
        {
            $ret['Success'] = false;
            $ret['Message'] = "Credentials string is not as per the pattern.";
            return $ret;  
        }

        $tmp = explode('|||', $cred);

        if(count($tmp) != 2)
        {
            $ret['Success'] = false;
            $ret['Message'] = "Credentials string is not as per the pattern.";
	    watchdog("atapp cred", "cred-string: $cred return-array: ".print_r($ret, true));
            return $ret; 
        }

        $uname = $tmp[0];
        $pwd = $tmp[1];

        $q = "select t_id from dh_teacher where CONCAT(t_code,'.',t_gender)=:name and t_status='Active' limit 1";
        $t_id = db_query($q, array(':name' => $uname))->fetchField();

        if (!$t_id)
        {
            $ret['Success'] = false;
            $ret['Message'] = "Credentials don't match.";
	    watchdog("atapp cred", "cred-string: $cred return-array: ".print_r($ret, true));
            return $ret; 
        }


        $q = "select pass from users where name=:name limit 1";
        $hash_stored = db_query($q, array(':name' => $uname))->fetchField();


        if (!$hash_stored)
        {
            $ret['Success'] = false;
            $ret['Message'] = "Credentials don't match.";
	    watchdog("atapp cred", "cred-string: $cred return-array: ".print_r($ret, true));
            return $ret;
        }

        $hash_new = _password_crypt('sha512', $pwd, $hash_stored);

        if ($hash_stored === $hash_new)
        {
            $ret['Success'] = true;
            $ret['Message'] = "Crednetials match";
	    watchdog("atapp cred", "cred-string: $cred return-array: ".print_r($ret, true));
            return $ret;
        }
        else
        {
            $ret['Success'] = false;
            $ret['Message'] = "Credentials don't match.";
	    watchdog("atapp cred", "cred-string: $cred return-array: ".print_r($ret, true));
            return $ret;
        }
    }
    catch(Exception $e)
    {
        $ret['Success'] = false;
        $ret['Message'] = "There is some error.";
        return $ret;
    }

}


