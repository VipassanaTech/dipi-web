function send_whatsapp_360( $to, $template, $params, $type = "template", $pdf = null)
{
    $namespace = variable_get('wa360_namespace', '');
    $wa_url = variable_get('wa360_url', '');
    $wa_api_key = variable_get('wa360_api_key', '');
    $p_arr = array();
    if ($params)
    {
        foreach((array)$params as $val)
        {
            $p_arr[] = array("type" => "text", "text" => $val );
        }
    }

    if ($type == 'pdf')
    {
        $payload = json_encode(array('to' => $to, "type" => 'document', 'document' => $pdf ));
    }
    elseif ($type == 'template')
        $payload = json_encode(array('to' => $to, "type" => 'template', 'template' => array('namespace' => $namespace, "language" => array("policy" => "deterministic", "code" => "en"), "name" => $template, "components" => array(array("type" => "body", "parameters" => $p_arr)))));
    else
        $payload = json_encode(array('to' => $to, "type" => 'text', 'text' => array("body" => $params) ));

    $headers = [
        "Content-Type: application/json",
        "D360-Api-Key: $wa_api_key",
    ];

    $curl = curl_init();

    curl_setopt_array($curl, [
        CURLOPT_URL => $wa_url.'/messages',
        CURLOPT_RETURNTRANSFER => true,
        CURLOPT_CUSTOMREQUEST => "POST",
        CURLOPT_POSTFIELDS => $payload,
        CURLOPT_HTTPHEADER => $headers,
    ]);

    $response = curl_exec($curl);
    $err = curl_error($curl);

    $httpcode = curl_getinfo($curl, CURLINFO_HTTP_CODE);

    if ($httpcode >= 300)
    {
      $r_array = (array) json_decode($response);
      watchdog('dipi_api', 'Whatsapp '.$to.' return code - '.$httpcode."\n Response: ". print_r($r_array, true));
    }


    curl_close($curl);
    $ret = '';

    if ($err) {
        watchdog('dipi_api', 'Unable to send Whatsapp: '.$to.' template: '.$template.': '.$err.': '.$response, array(), WATCHDOG_ERROR);
    } else {
        $ret = json_decode($response)->messages[0]->id;
    }
    return $ret;
}


