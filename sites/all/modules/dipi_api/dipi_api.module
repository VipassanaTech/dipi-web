function handle_whatsapp_msg($sender, $data)
{
    $keywords = _api_sms_keywords();
    $response = "";
    $temp = explode(" ", $data);
    $keyword = $temp[0];
    $content = trim(str_replace($keyword, "", $data));
    $today = date('Y-m-d');
    $q = "select count(sl_id) from dh_sms_log where sl_from = '$sender' and sl_tstamp >= '$today'";
    $msg_count = db_query($q)->fetchField();
    if ($msg_count > 100)
    {
        watchdog('dipi_api', 'Sender '.$sender.' blocked due to too many messages');
        return array("Result" => "Too Many Messages"); 
    }
    /*if ((strlen($keyword) > 20) || (!is_string($keyword)) )
        return array("Result" => "Bad Keyword $keyword");

    if ((strlen($content) > 60) || (!is_string($content)) )
        return array("Result" => "Bad data $content");
    */
    if (!in_array( strtoupper($keyword), $keywords ))
    {
        $response = "Unknown Keyword $keyword, try HELP";
        $result = send_whatsapp_360($sender, "", $response, "text");
        _sms_log($sender, $keyword, "No data", $response);
        return array("Result" => "Bad Keyword $keyword"); //['status']
    }

    $content = str_replace(array("'", '"', '&','$','#','%','`','~'), '', $content);
    if ((strlen($content) > 60) || (!mb_detect_encoding($content, 'ASCII', true)))
    {
        $response = "Invalid Data, try HELP";
        $result = send_whatsapp_360($sender, "", $response, "text");
        _sms_log($sender, $keyword, "No data", $response);
        return array("Result" => "Bad Content $keyword"); //['status']        
    }

    switch ( strtoupper($keyword) ) 
    {
        case 'HELP':
            $response = _api_sms_keyword_help();
            break;
        case 'ADDRESS':
            $response = _api_sms_keyword_address( $content ) ;
            break;      
        case 'CONTACT':
            $response = _api_sms_keyword_contact( $content ) ;
            break;              
        case 'CENTRES':
            $response = _api_sms_keyword_centres();
            break;      
        case 'STATUS':
            $response = _api_sms_keyword_status($sender);
            break;
        case 'CANCEL':
            $response = _api_sms_keyword_cancel($sender, $content);
            break;
        case 'CONFIRM':
            $response = _api_sms_keyword_confirm($sender, $content);
            break;
        case 'TRANSFER':
            if (count($temp) < 3)
            {
              $response = "TRANSFER <centre> <YYYY-mm-dd>\nPlease send in above format";
              $result = send_whatsapp_360($sender, "", $response, "text");
              _sms_log($sender, $keyword, $data, $response);
              return array("Result" => "Bad format ".$content); //['status']            
            }
            $centre = $temp[1];
            $start_date = $temp[2];
            if (!isset($temp[3]))
                $id = "";
            else
                $id = $temp[3];
            $response = _api_sms_keyword_transfer($sender,  $centre, $start_date, $id );
            break;
        case 'PATRIKA':
            if (is_numeric($temp[1]) && count($temp) == 3)
            {
                $pid = $temp[1];
                $pincode = $temp[2];
                $out = _api_sms_keyword_patrika($pid, $pincode);
                $response = $out["response"];
            }
            elseif(count($temp) == 2 && is_string($temp[1]))
            {
                $lang = strtolower($temp[1]);
                $out = _api_sms_keyword_patrika("", "", $lang);

                $pdf_response = $out["pdf_response"];
                $response = $out["response"];
            }
            elseif(count($temp) == 4 && is_string($temp[1]) && is_numeric($temp[2]) && is_numeric($temp[3]))
            {

                $lang = strtolower($temp[1]);
                $month = $temp[2];
                $year = $temp[3];
                $out = _api_sms_keyword_patrika("", "", $lang, $month, $year);
                $pdf_response = $out["pdf_response"];
                $response = $out["response"];
            }
            else
            {
                $lang_file = "public:///patrika-pdf/langs";

                if (file_exists($lang_file))
                    $patrika_langs = file_get_contents($lang_file);
                else
                    $patrika_langs = "";

                $response = "Please send in one of the below format.\n\n*to get status of patrika subscription*\npatrika <subscriber id> <pincode>\n*Eg:*  ```patrika 345 285001```\n\n*to get recent patrika for a language*\npatrika <langcode>\n*Eg:*  ```patrika hi```\n\n*to get a specific patrika for language, month, year*\npatrika <langcode> <month> <year>\n*Eg:*  ```patrika hi 4 2021```\n\n\nFollowing are available languages for patrika:\n\n{$patrika_langs}";

                $result = send_whatsapp_360($sender, "", $response, "text");
                _sms_log($sender, $keyword, $data, $response);
                return array("Result" => "Bad format ".$content);
            }
            break;
        default:
            $response = _api_sms_keyword_help();
    }

    if ($pdf_response)
    {
        _sms_log($sender, $keyword, $data, $pdf_response['filename']);
        send_whatsapp_360($sender, "", "", "pdf", $pdf_response);
    }
    elseif ($response)
    {
        _sms_log($sender, $keyword, $data, $response);
        send_whatsapp_360($sender, "", $response, "text");
    }
    
}


function upload_whatsapp_pdf($dir, $file)
{
    $out = array("success" => true, "ret" => null);

    if ($file !== basename($file))
    {
        $out["success"] = false;
        return $out;
    }

    if (!file_exists("{$dir}/{$file}"))
    {
        $out["success"] = false;
        return $out;
    }

    if (is_dir("{$dir}/{$file}"))
    {
        $out["success"] = false;
        return $out;
    }


    $file_size = filesize("{$dir}/{$file}");

    $uploaded = variable_get("wa_upload_{$file}", '');

    if($uploaded)
    {
        if($uploaded["expire"] > strtotime("now") && $uploaded["file_size"] == $file_size)
        {
            $out["ret"] = $uploaded["return"];
            return $out;
        }
    }

    $data = file_get_contents("{$dir}/{$file}");
    $caption = $file;
    $filename = $file;

    try
    {  
        $curl = curl_init();

        curl_setopt_array($curl, array(
          CURLOPT_URL => variable_get('wa360_url', '').'/media',
          CURLOPT_RETURNTRANSFER => true,
          CURLOPT_ENCODING => '',
          CURLOPT_MAXREDIRS => 10,
          CURLOPT_TIMEOUT => 0,
          CURLOPT_FOLLOWLOCATION => true,
          CURLOPT_HTTP_VERSION => CURL_HTTP_VERSION_1_1,
          CURLOPT_CUSTOMREQUEST => 'POST',
          CURLOPT_POSTFIELDS => $data,
          CURLOPT_HTTPHEADER => array(
            'D360-Api-Key: '.variable_get('wa360_api_key', ''),
            'Content-Type: application/pdf'
          ),
        ));

        $response = curl_exec($curl);
        curl_close($curl);

        $ret = json_decode($response);

        $file_id = $ret->media[0]->id;

        if($file_id)
        {
            $out["ret"] = array('id' => $file_id, 'caption' => $caption, 'filename' => $filename);

            variable_set("wa_upload_{$file}", array("expire" => strtotime("+ 12 day"), "file_size" => $file_size,"return" => $out["ret"]));

            return $out;
        }
        else
        {
            $out["success"] = false;
            return $out;
        }
        
        
    }
    catch (\Throwable $e) 
    {
        watchdog("upload_whatsapp_pdf", "Error uploading $filename: ".$e->getMessage());
        $out["success"] = false;
        return $out;
    }
}



function _apply_at_seva_app($at_code, $gender, $course, $data=array('comments' => ''))
{
  log_app( "_apply_at_seva_app ATCode: $at_code, Gender: $gender, Course: $course, Comments: {$data['comments']}");

  $comments = isset($data['comments']) ? $data['comments'] : '';

  if (!$at_code)
    return array('Error' => 'No AT Code');

  if (! in_array ( strtoupper( $gender ), array('M', 'F')) )
    return array('Error' => 'No/Invalid Gender');

  if (!$course)
    return array( "Error" => 'No Course');


  $q = "select c_start, c_cancelled, c_deleted from dh_course where c_id=:c_id";
  $res = db_query($q, array(':c_id' => $course))->fetchAssoc();

  if (!$res)
    return array( "Error" => 'Invalid Course');

  if ($res['c_cancelled'])
    return array( "Error" => 'Course is Cancelled');

  if ($res['c_deleted'])
    return array( "Error" => 'Course is Deleted');

  if (strtotime($res['c_start']) < strtotime(date('Y-m-d')))
    return array( "Error" => 'Course is Started');


  $q = "select t_id from dh_teacher where t_code = :at_code and t_gender = :gender limit 1";
  $res = db_query($q, array(':at_code' => $at_code, ':gender' => $gender))->fetchAssoc();

  if (!$res)
    return array('Error' => 'Invalid AT');

  $at_id = $res['t_id'];

  $required = check_at_requirement($course, $gender);

  if(!$required)
    return array('Error' => 'AT requirement is fulfilled for the course');

  $q = "select ct_id, ct_status from dh_course_teacher where ct_teacher=:ct_teacher and ct_course=:ct_course limit 1";
  $res = db_query($q, array( ':ct_teacher' => $at_id, ':ct_course' => $course))->fetchAssoc();


  global $user;
  if($res)
  {
    $app_status = $res['ct_status'];
    $course_teacher_id = $res['ct_id'];

    if ($app_status <> 'Cancelled')
    {
      return array('Error' => 'AT application is already applied for the course');
    }
    else
    {
      $fields = array();
      $fields['ct_updated'] = date('Y-m-d H:i:s');
      $fields['ct_updated_by'] = $user->uid;
      $fields['ct_status'] = 'Received';

      $updated = db_update('dh_course_teacher')
        ->fields( $fields )
        ->condition('ct_id', $course_teacher_id, '=')
        ->execute();

      if($updated)
      {
        log_course_teacher($course_teacher_id, "Status updated to {$fields['ct_status']}<br>Comments: $comments");
        update_course_current_at_count( $course_teacher_id );
        send_at_schedule_email($course_teacher_id);
        send_at_schedule_email($course_teacher_id, 1);
        return array('Success' => 'ReApplied AT Application successfully.');
      }
      else
        return array('Error' => 'Some issue in Reapplying AT Application.');
    }

  }
  else
  {
    $fields = array();

    $fields['ct_course'] = $course;
    $fields['ct_teacher'] = $at_id;
    $fields['ct_status'] = 'Received';
    $fields['ct_type'] = 'Conducting';
    $fields['ct_group'] = 1;
    $fields['ct_created'] = date('Y-m-d H:i:s');
    $fields['ct_created_by'] = $user->uid;
    $fields['ct_updated'] = date('Y-m-d H:i:s');
    $fields['ct_updated_by'] = $user->uid;

    $ct_id = db_insert('dh_course_teacher')->fields( $fields )->execute();

    if($ct_id)
    {
      log_course_teacher($ct_id, 'Application Received<br>Comments: '.$comments);
      send_at_schedule_email($ct_id);
      send_at_schedule_email($ct_id, 1);
      return array('Success' => 'Applied AT Application successfully.');
    }
    else
      return array('Error' => 'Some issue in Reapplying AT Application.');
  }

}


