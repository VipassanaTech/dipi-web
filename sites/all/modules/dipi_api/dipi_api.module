    $count_q = "select count(a_id) from dh_applicant left join dh_course on (a_course=c_id) 
      where date_format(c_start, '%Y%m%d') >= ".date("Ymd")." and CONCAT(a_mob_country,a_phone_mobile)='$phone'";

