        $update_cred_cry_bin = sodium_base642bin($update_cred_cry_base64, SODIUM_BASE64_VARIANT_ORIGINAL);
        $update_cred = sodium_crypto_box_seal_open($update_cred_cry_bin, $sodium_key_pair);

        if(!$update_cred || !strstr($update_cred, '|||'))
        {
            $ret['Success'] = false;
            $ret['Message'] = "Credentials string is not as per the pattern.";
            return $ret;  
        }

        $tmp = explode('|||', $update_cred);

        if(count($tmp) != 3)
        {
            $ret['Success'] = false;
            $ret['Message'] = "Credentials string is not as per the pattern.";
            return $ret; 
        }

        $uname = $tmp[0];
        $pwd_old = $tmp[1];
        $pwd_new = $tmp[2];


        $q = "select t_id from dh_teacher where CONCAT(t_code,'.',t_gender)=:name limit 1";
        $t_id = db_query($q, array(':name' => $uname))->fetchField();

        if (!$t_id)
        {
            $ret['Success'] = false;
            $ret['Message'] = "Credentials don't match.";
            return $ret; 
        }


        $q = "select pass from users where name=:name limit 1";
        $hash_stored = db_query($q, array(':name' => $uname))->fetchField();


        if (!$hash_stored)
        {
        $ret['Success'] = false;
        $ret['Message'] = "Credentials don't match.";
        return $ret;
        }

        $hash_new = _password_crypt('sha512', $pwd_old, $hash_stored);

        if ($hash_stored === $hash_new)
        {
            if (strlen($pwd_new) < 8)
            {
                $ret['Success'] = false;
                $ret['Message'] = "New Password Must Contain At Least 8 Characters and At Least 1 Number!";
                return $ret;
            }
            elseif(!preg_match("#[0-9]+#",$pwd_new))
            {
                $ret['Success'] = false;
                $ret['Message'] = "New Password Must Contain At Least 8 Characters and At Least 1 Number!";
                return $ret;
            }

            $new_hash = user_hash_password($pwd_new);
            $q = "update users set pass=:pass where name=:name limit 1";
            db_query($q, array(':pass' => $new_hash, ':name' => $uname));

            apilogit( 0, 'Api-App dh_teacher', $t_id, 'Password Update', 'Password Update' );

            $ret['Success'] = true;
            $ret['Message'] = "Password updated";
            return $ret;
        }
        else
        {
            $ret['Success'] = false;
            $ret['Message'] = "Credentials don't match.";
            return $ret;
        }

    }
    catch(Exception $e)
    {
        $ret['Success'] = false;
        $ret['Message'] = "There is some error.";
        return $ret;
    }

}


